<Application x:Class="ActueelNS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
             xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
              xmlns:Controls="clr-namespace:Coding4Fun.Toolkit.Controls;assembly=Coding4Fun.Toolkit.Controls"
            xmlns:primitives="clr-namespace:Microsoft.Phone.Controls.Primitives;assembly=Microsoft.Phone.Controls.Toolkit"
              xmlns:sharedControls="clr-namespace:ActueelNS.Shared.Controls"
    mc:Ignorable="d" 
             xmlns:vm="clr-namespace:ActueelNS.ViewModel">

    <Application.Resources>
        <resources:LocalizedStrings xmlns:resources="clr-namespace:ActueelNS.Resources" x:Key="LocalizedStrings" />

        <!--Global View Model Locator-->
        <vm:ViewModelLocator x:Key="Locator"
                             d:IsDataSource="True" />

        <phone:JumpListItemBackgroundConverter x:Key="BackgroundConverter"/>
        <phone:JumpListItemForegroundConverter x:Key="ForegroundConverter"/>


        <SolidColorBrush x:Key="BackgroundColor" Color="White"></SolidColorBrush>
        <SolidColorBrush x:Key="AlternateColor" Color="#F2F2F7"></SolidColorBrush>
        <SolidColorBrush x:Key="TextColor" Color="DarkBlue"></SolidColorBrush>
        <SolidColorBrush x:Key="ForegroundColor" Color="White"></SolidColorBrush>
        <SolidColorBrush x:Key="AlternateTextColor" Color="White"></SolidColorBrush>
        <SolidColorBrush x:Key="NotFilled" Color="Gray"></SolidColorBrush>
        <SolidColorBrush x:Key="ControlBackgroundColor" Color="LightBlue"></SolidColorBrush>
        <SolidColorBrush x:Key="GrayColor" Color="LightGray"></SolidColorBrush>

        <!--Custom Frame template. We want to show a notification control on each page. Rather than defining and adding to each page, we add
        to the root frame. This enables us to also define the VisualStateManager once, saving duplication required if the control was
        added to each page. -->
        <ControlTemplate x:Name="NewFrameTemplate">
            <Grid x:Name="ClientArea">

                <ContentPresenter/>
                <Image x:Name="ConnectedImage" Source="Assets\connected.png" Margin="12,0" 
                       HorizontalAlignment="Right" VerticalAlignment="Top"
                       Height="40" Visibility="Collapsed"/>

                <!--Custom notification control. This control is used to display connectivity status.
                    Its state is controlled by the VisualStateManager -->
                <sharedControls:NotificationControl x:Name="notifyControl" Canvas.ZIndex="2" Visibility="Collapsed" Height="150"
                     HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup>
                        <VisualState x:Name="ReadyForTap">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="notifyControl" Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="notifyControl" Storyboard.TargetProperty="Status">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="ReadyForTap"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="TapCanceled">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="notifyControl" Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="notifyControl" Storyboard.TargetProperty="Status">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Canceled"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Connected">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ConnectedImage" Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="notifyControl" Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="notifyControl" Storyboard.TargetProperty="Status">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Completed"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Disconnected">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ConnectedImage" Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="notifyControl" Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="notifyControl" Storyboard.TargetProperty="Status">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Disconnected"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Grid>

        </ControlTemplate>


        <!--<SolidColorBrush x:Key="AppBarColor" Color="LightGray"></SolidColorBrush>
        <SolidColorBrush x:Key="AppBarForeColor" Color="Black"></SolidColorBrush>-->

        <Color x:Key="AppBarColor">LightGray</Color>
        <Color x:Key="AppBarForeColor">Black</Color>

        <Color x:Key="SysTrayBackgroundColor">#FFFFFE</Color>
        <Color x:Key="SysTrayForegroundColor">DarkBlue</Color>

        <!--For scrollbar color-->
        <Style TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="3" Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="ScrollStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="00:00:00.5"/>
                                    </VisualStateGroup.Transitions>
                                    <VisualState x:Name="Scrolling">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="VerticalScrollBar"/>
                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="HorizontalScrollBar"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="NotScrolling"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid Margin="{TemplateBinding Padding}">
                                <ScrollContentPresenter x:Name="ScrollContentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}"/>
                                <ScrollBar x:Name="VerticalScrollBar" HorizontalAlignment="Right" Height="Auto" IsHitTestVisible="False" IsTabStop="False" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" Opacity="0" Orientation="Vertical" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{TemplateBinding VerticalOffset}" ViewportSize="{TemplateBinding ViewportHeight}" VerticalAlignment="Stretch" Width="5" Background="{StaticResource GrayColor}"/>
                                <ScrollBar x:Name="HorizontalScrollBar" HorizontalAlignment="Stretch" Height="5" IsHitTestVisible="False" IsTabStop="False" Maximum="{TemplateBinding ScrollableWidth}" Minimum="0" Opacity="0" Orientation="Horizontal" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Value="{TemplateBinding HorizontalOffset}" ViewportSize="{TemplateBinding ViewportWidth}" VerticalAlignment="Bottom" Width="Auto"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    


        <Style TargetType="TextBlock" BasedOn="{StaticResource PhoneTextNormalStyle}" x:Key="PhoneTextNormalStyleCustom">
            <Setter Property="Foreground" Value="{StaticResource TextColor}">
            </Setter>
        </Style>

        <Style TargetType="TextBlock" BasedOn="{StaticResource PhoneTextTitle1Style}" x:Key="PhoneTextTitle1StyleCustom">
            <Setter Property="Foreground" Value="{StaticResource TextColor}">
            </Setter>
        </Style>

        <Style TargetType="TextBlock" BasedOn="{StaticResource PhoneTextLargeStyle}" x:Key="PhoneTextLargeStyleCustom">
