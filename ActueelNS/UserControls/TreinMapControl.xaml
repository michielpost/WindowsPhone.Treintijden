<UserControl x:Class="ActueelNS.UserControls.TreinMapControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="48" d:DesignWidth="48">
    
    <StackPanel x:Name="LayoutRoot" Background="White" Tap="LayoutRoot_Tap">
        <Border BorderBrush="{StaticResource TextColor}" BorderThickness="2"   Padding="4,2">
            <TextBlock x:Name="TypeTextBox" Foreground="Black" HorizontalAlignment="Center">TYPE</TextBlock>
        </Border>
    </StackPanel>
</UserControl>